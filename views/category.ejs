<!DOCTYPE html>
<html>
  <%- include("head") %>
  <body>
    <%- include("header") %>
    <main class="recipe">
      <h1><%- title %></h1>

      <img src="/images/<%=category.image%>" />

      <% if (recipes.length > 0) { %>
      <h2>Recipes:</h2>
      <ul>
        <% recipes.forEach(function (recipe) { %>
        <li>
          <a href="<%=recipe.url%>"> <%- recipe.name %> </a>
        </li>
        <% }) %>
      </ul>

      <% } else { %>
      <h2>This category has no recipes yet.</h2>
      <% }; %>
    </main>
    <footer>
      <p><a href="<%=category.url + '/delete'%>">Delete this category</a></p>
      <p><a href="<%=category.url + '/update'%>">Edit this category</a></p>
    </footer>
  </body>
</html>
